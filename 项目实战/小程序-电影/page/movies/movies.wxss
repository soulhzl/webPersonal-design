/* page/movies/movies.wxss */
@import 'movielist/movielist-template.wxss';
@import 'category/category-template.wxss';

.container {
  background-color: #f2f2f2;
}

.container-template {
  margin-bottom: 30rpx;
}

.search {
  display: flex;
  height: 80rpx;
  width: 100%;
  background-color: #f2f2f2;
}

.search-img{
  margin: auto 0 auto 20rpx;
}

.placeholder{
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search input{
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.search-pannel{
  position: absolute;
  top: 80rpx;
}

.cancel{
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 10rpx;
}